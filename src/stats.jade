doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title Knowit Developer Summit
    link(rel='stylesheet' href='http://yui.yahooapis.com/pure/0.6.0/pure-min.css')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/dc/2.0.0-beta.18/dc.css')
    style.
      body { font-family:sans-serif; background-color:#333; color:#fff}
      .dc-table-head { display:none; }
      .dc-table-label { font-weight: bold; padding: 15px 7px 10px; }
      .dc-table-column { padding: 5px 7px; }
      div.dc-chart { float:none; }
      g.axis { display:none; }
      a.reset { color:#fff; margin-left:1em; font-weight:normal; font-size:smaller; }
    script(src='https://cdnjs.cloudflare.com/ajax/libs/crossfilter/1.3.12/crossfilter.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.6/d3.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/dc/2.0.0-beta.18/dc.min.js')
  body
    .pure-g
      .pure-u-1-5
        h1 KDS 2015
        #data-count
        #speaker-chart
          h3
            span Participation
            a.reset(href='javascript:speakerChart.filterAll();dc.redrawAll()' style='display:none') reset chart
      .pure-u-1-5
        #country-chart
          h3
            span Country
            a.reset(href='javascript:countryChart.filterAll();dc.redrawAll()' style='display:none') reset chart
        #city-chart
          h3
            span City
            a.reset(href='javascript:cityChart.filterAll();dc.redrawAll()' style='display:none') reset chart
      .pure-u-1-5
        #company-chart
          h3
            span Company
            a.reset(href='javascript:companyChart.filterAll();dc.redrawAll()' style='display:none') reset chart
      .pure-u-2-5
        h3 Participants
        table#data-table
    script.
      window.KDS_ATTENDEES=JSON.parse('!{JSON.stringify(attendees)}');
    script(src='stats.js')
